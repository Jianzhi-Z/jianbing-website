<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>个人资料 - <%= siteTitle %></title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: { 500: '#6366F1', 600: '#4F46E5' },
            dark: { bg: '#0F172A', surface: '#1E293B', elevated: '#334155', border: '#475569', text: '#F1F5F9', 'text-secondary': '#94A3B8' }
          }
        }
      }
    }
  </script>
  
  <script src="https://unpkg.com/lucide@latest"></script>
  
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar-link:hover, .sidebar-link.active { background: rgba(99, 102, 241, 0.1); color: #6366F1; }
  </style>
</head>
<body class="bg-dark-bg text-dark-text">
  <div class="flex h-screen">
    <aside class="w-64 bg-dark-surface border-r border-dark-border flex-shrink-0 hidden md:flex flex-col">
      <div class="p-6 border-b border-dark-border">
        <a href="/" class="flex items-center space-x-2 text-primary-500">
          <i data-lucide="zap" class="w-6 h-6"></i>
          <span class="font-bold text-lg">煎饼</span>
        </a>
      </div>
      
      <nav class="flex-1 p-4 space-y-1">
        <a href="/admin/dashboard" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
          <span>仪表盘</span>
        </a>
        <a href="/admin/articles" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="file-text" class="w-5 h-5"></i>
          <span>文章管理</span>
        </a>
        <a href="/admin/products" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="box" class="w-5 h-5"></i>
          <span>产品管理</span>
        </a>
        <a href="/admin/profile" class="sidebar-link active flex items-center space-x-3 px-4 py-3 rounded-lg text-primary-500">
          <i data-lucide="user" class="w-5 h-5"></i>
          <span>个人资料</span>
        </a>
      </nav>
      
      <div class="p-4 border-t border-dark-border">
        <a href="/admin/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10 transition-colors">
          <i data-lucide="log-out" class="w-5 h-5"></i>
          <span>退出登录</span>
        </a>
      </div>
    </aside>
    
    <div class="flex-1 flex flex-col overflow-hidden">
      <header class="bg-dark-surface border-b border-dark-border h-16 flex items-center justify-between px-6">
        <div class="flex items-center space-x-4">
          <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-dark-elevated">
            <i data-lucide="menu" class="w-5 h-5"></i>
          </button>
          <h1 class="text-xl font-semibold">个人资料</h1>
        </div>
      </header>
      
      <main class="flex-1 overflow-y-auto p-6">
        <% if (success && success.length > 0) { %>
          <div class="mb-6 p-4 rounded-lg bg-green-500/10 border border-green-500/20 text-green-400 flex items-center space-x-2">
            <i data-lucide="check-circle" class="w-5 h-5"></i>
            <span><%= success %></span>
          </div>
        <% } %>
        <% if (error && error.length > 0) { %>
          <div class="mb-6 p-4 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 flex items-center space-x-2">
            <i data-lucide="alert-circle" class="w-5 h-5"></i>
            <span><%= error %></span>
          </div>
        <% } %>
        
        <form action="/admin/profile" method="POST" class="max-w-4xl mx-auto">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="space-y-6">
              <div class="bg-dark-surface rounded-xl p-6 border border-dark-border text-center">
                <h3 class="font-semibold mb-4">头像</h3>
                <div class="mb-4">
                  <img src="<%= profile && profile.avatar ? profile.avatar : '/images/avatar.jpg' %>" 
                    alt="头像" 
                    id="avatar-preview"
                    class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-dark-border">
                </div>
                <input type="file" name="avatar" accept="image/*" id="avatar-input"
                  class="w-full px-4 py-2 bg-dark-bg border border-dark-border rounded-lg file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100 text-sm">
              </div>
              
              <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
                <h3 class="font-semibold mb-4">账号信息</h3>
                <div class="space-y-3 text-sm">
                  <div class="flex justify-between">
                    <span class="text-dark-text-secondary">用户名</span>
                    <span>admin</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-dark-text-secondary">角色</span>
                    <span>管理员</span>
                  </div>
                </div>
                <div class="mt-4 pt-4 border-t border-dark-border">
                  <a href="/admin/logout" class="inline-flex items-center space-x-2 text-red-400 hover:text-red-300 text-sm">
                    <i data-lucide="log-out" class="w-4 h-4"></i>
                    <span>退出登录</span>
                  </a>
                </div>
              </div>
            </div>
            
            <div class="lg:col-span-2 space-y-6">
              <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
                <h3 class="font-semibold mb-4">基本信息</h3>
                <div class="grid md:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium mb-2">姓名</label>
                    <input type="text" name="name" value="<%= profile ? profile.name : '煎饼' %>"
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none">
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">头衔</label>
                    <input type="text" name="title" value="<%= profile ? profile.title : 'AI行动家' %>"
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none">
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">邮箱</label>
                    <input type="email" name="email" value="<%= profile ? profile.email : '' %>"
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none">
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">电话</label>
                    <input type="tel" name="phone" value="<%= profile ? profile.phone : '' %>"
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none">
                  </div>
                  <div class="md:col-span-2">
                    <label class="block text-sm font-medium mb-2">位置</label>
                    <input type="text" name="location" value="<%= profile ? profile.location : '' %>"
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none">
                  </div>
                </div>
              </div>
              
              <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
                <h3 class="font-semibold mb-4">个人简介</h3>
                <textarea name="bio" rows="5"
                  class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none resize-none"
                  placeholder="介绍你自己..."><%= profile ? profile.bio : '' %></textarea>
              </div>
              
              <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
                <h3 class="font-semibold mb-4">技能专长</h3>
                <textarea name="skills" rows="3"
                  class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none resize-none"
                  placeholder="AI智能体, Python, LangChain, React (用逗号分隔)"><%= profile ? profile.skills : '' %></textarea>
                <p class="text-dark-text-secondary text-sm mt-2">用逗号分隔多个技能</p>
              </div>
              
              <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
                <h3 class="font-semibold mb-4">社交链接</h3>
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium mb-2">GitHub</label>
                    <div class="relative">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i data-lucide="github" class="w-5 h-5 text-dark-text-secondary"></i>
                      </div>
                      <input type="url" name="github" value="<%= profile ? profile.github : '' %>"
                        class="w-full pl-10 pr-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                        placeholder="https://github.com/username">
                    </div>
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">Twitter</label>
                    <div class="relative">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i data-lucide="twitter" class="w-5 h-5 text-dark-text-secondary"></i>
                      </div>
                      <input type="url" name="twitter" value="<%= profile ? profile.twitter : '' %>"
                        class="w-full pl-10 pr-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                        placeholder="https://twitter.com/username">
                    </div>
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">LinkedIn</label>
                    <div class="relative">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i data-lucide="linkedin" class="w-5 h-5 text-dark-text-secondary"></i>
                      </div>
                      <input type="url" name="linkedin" value="<%= profile ? profile.linkedin : '' %>"
                        class="w-full pl-10 pr-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                        placeholder="https://linkedin.com/in/username">
                    </div>
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">微信</label>
                    <div class="relative">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i data-lucide="message-circle" class="w-5 h-5 text-dark-text-secondary"></i>
                      </div>
                      <input type="text" name="wechat" value="<%= profile ? profile.wechat : '' %>"
                        class="w-full pl-10 pr-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                        placeholder="微信号">
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="flex justify-end">
                <button type="submit" class="inline-flex items-center space-x-2 px-8 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors">
                  <i data-lucide="save" class="w-5 h-5"></i>
                  <span>保存修改</span>
                </button>
              </div>
            </div>
          </div>
        </form>
      </main>
    </div>
  </div>
  
  <script>
    lucide.createIcons();
    
    const avatarInput = document.getElementById('avatar-input');
    const avatarPreview = document.getElementById('avatar-preview');
    
    avatarInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          avatarPreview.src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>
</html>
