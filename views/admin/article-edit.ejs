<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= article ? '编辑文章' : '新建文章' %> - <%= siteTitle %></title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: { 500: '#6366F1', 600: '#4F46E5' },
            dark: { bg: '#0F172A', surface: '#1E293B', elevated: '#334155', border: '#475569', text: '#F1F5F9', 'text-secondary': '#94A3B8' }
          }
        }
      }
    }
  </script>
  
  <script src="https://unpkg.com/lucide@latest"></script>
  
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar-link:hover, .sidebar-link.active { background: rgba(99, 102, 241, 0.1); color: #6366F1; }
    .markdown-preview { font-family: 'Inter', sans-serif; line-height: 1.8; }
    .markdown-preview h1 { font-size: 2rem; font-weight: 700; margin: 1.5rem 0 1rem; }
    .markdown-preview h2 { font-size: 1.5rem; font-weight: 600; margin: 1.5rem 0 1rem; }
    .markdown-preview h3 { font-size: 1.25rem; font-weight: 600; margin: 1rem 0 0.5rem; }
    .markdown-preview p { margin: 1rem 0; }
    .markdown-preview ul, .markdown-preview ol { margin: 1rem 0; padding-left: 2rem; }
    .markdown-preview code { background: #1E293B; padding: 0.2rem 0.4rem; border-radius: 4px; font-family: monospace; }
    .markdown-preview pre { background: #1E293B; padding: 1rem; border-radius: 8px; overflow-x: auto; }
    .markdown-preview pre code { background: none; padding: 0; }
  </style>
</head>
<body class="bg-dark-bg text-dark-text">
  <div class="flex h-screen">
    <aside class="w-64 bg-dark-surface border-r border-dark-border flex-shrink-0 hidden md:flex flex-col">
      <div class="p-6 border-b border-dark-border">
        <a href="/" class="flex items-center space-x-2 text-primary-500">
          <i data-lucide="zap" class="w-6 h-6"></i>
          <span class="font-bold text-lg">煎饼</span>
        </a>
      </div>
      
      <nav class="flex-1 p-4 space-y-1">
        <a href="/admin/dashboard" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
          <span>仪表盘</span>
        </a>
        <a href="/admin/articles" class="sidebar-link active flex items-center space-x-3 px-4 py-3 rounded-lg text-primary-500">
          <i data-lucide="file-text" class="w-5 h-5"></i>
          <span>文章管理</span>
        </a>
        <a href="/admin/products" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="box" class="w-5 h-5"></i>
          <span>产品管理</span>
        </a>
        <a href="/admin/profile" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="user" class="w-5 h-5"></i>
          <span>个人资料</span>
        </a>
      </nav>
      
      <div class="p-4 border-t border-dark-border">
        <a href="/admin/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10 transition-colors">
          <i data-lucide="log-out" class="w-5 h-5"></i>
          <span>退出登录</span>
        </a>
      </div>
    </aside>
    
    <div class="flex-1 flex flex-col overflow-hidden">
      <header class="bg-dark-surface border-b border-dark-border h-16 flex items-center justify-between px-6">
        <div class="flex items-center space-x-4">
          <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-dark-elevated">
            <i data-lucide="menu" class="w-5 h-5"></i>
          </button>
          <h1 class="text-xl font-semibold"><%= article ? '编辑文章' : '新建文章' %></h1>
        </div>
        <div class="flex items-center space-x-2">
          <% if (article) { %>
            <a href="/articles/<%= article.slug %>" target="_blank" class="inline-flex items-center space-x-2 px-4 py-2 text-dark-text-secondary hover:text-dark-text transition-colors">
              <i data-lucide="eye" class="w-4 h-4"></i>
              <span>预览</span>
            </a>
          <% } %>
        </div>
      </header>
      
      <main class="flex-1 overflow-y-auto p-6">
        <form action="<%= article ? '/admin/articles/' + article.id : '/admin/articles' %>" method="POST" enctype="multipart/form-data" class="max-w-5xl mx-auto">
          <% if (article) { %>
          <input type="hidden" name="_method" value="PUT">
          <% } %>
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2 space-y-6">
              <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium mb-2">文章标题</label>
                    <input type="text" name="title" value="<%= article ? article.title : '' %>" required
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                      placeholder="请输入文章标题">
                  </div>
                  
                  <div>
                    <label class="block text-sm font-medium mb-2">URL别名 (slug)</label>
                    <input type="text" name="slug" value="<%= article ? article.slug : '' %>" required
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                      placeholder="例如：my-first-article">
                    <p class="text-dark-text-secondary text-sm mt-1">用于URL，只能包含字母、数字和连字符</p>
                  </div>
                  
                  <div>
                    <label class="block text-sm font-medium mb-2">摘要</label>
                    <textarea name="excerpt" rows="3"
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none resize-none"
                      placeholder="简短描述文章内容"><%= article ? article.excerpt : '' %></textarea>
                  </div>
                  
                  <div>
                    <label class="block text-sm font-medium mb-2">封面图片</label>
                    <input type="file" name="cover_image" accept="image/*"
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100">
                    <% if (article && article.cover_image) { %>
                      <div class="mt-2">
                        <img src="<%= article.cover_image %>" alt="当前封面" class="h-32 rounded-lg object-cover">
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
              
              <div class="bg-dark-surface rounded-xl border border-dark-border overflow-hidden">
                <div class="border-b border-dark-border flex items-center space-x-4 px-4">
                  <button type="button" id="tab-edit" class="py-3 text-sm font-medium text-primary-500 border-b-2 border-primary-500">编辑</button>
                  <button type="button" id="tab-preview" class="py-3 text-sm font-medium text-dark-text-secondary hover:text-dark-text">预览</button>
                </div>
                <div class="p-6">
                  <div id="editor-panel">
                    <textarea name="content" id="content" rows="20" required
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none font-mono text-sm resize-none"
                      placeholder="使用 Markdown 格式编写文章内容..."><%= article ? article.content : '' %></textarea>
                  </div>
                  <div id="preview-panel" class="hidden markdown-preview">
                    <div class="text-dark-text-secondary text-center py-12">点击预览查看渲染效果</div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="space-y-6">
              <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
                <h3 class="font-semibold mb-4">发布设置</h3>
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium mb-2">分类</label>
                    <select name="category" required
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none">
                      <option value="AI" <%= article && article.category === 'AI' ? 'selected' : '' %>>AI</option>
                      <option value="编程" <%= article && article.category === '编程' ? 'selected' : '' %>>编程</option>
                      <option value="智能体" <%= article && article.category === '智能体' ? 'selected' : '' %>>智能体</option>
                      <option value="教程" <%= article && article.category === '教程' ? 'selected' : '' %>>教程</option>
                      <option value="思考" <%= article && article.category === '思考' ? 'selected' : '' %>>思考</option>
                      <option value="未分类" <%= article && article.category === '未分类' ? 'selected' : '' %>>未分类</option>
                    </select>
                  </div>
                  
                  <div>
                    <label class="block text-sm font-medium mb-2">标签</label>
                    <input type="text" name="tags" value="<%= article ? article.tags : '' %>"
                      class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                      placeholder="AI, Python, 教程 (用逗号分隔)">
                  </div>
                  
                  <div>
                    <label class="block text-sm font-medium mb-2">状态</label>
                    <div class="space-y-2">
                      <label class="flex items-center space-x-2 cursor-pointer">
                        <input type="radio" name="status" value="draft" <%= !article || article.status === 'draft' ? 'checked' : '' %> class="text-primary-500 focus:ring-primary-500">
                        <span>草稿</span>
                      </label>
                      <label class="flex items-center space-x-2 cursor-pointer">
                        <input type="radio" name="status" value="published" <%= article && article.status === 'published' ? 'checked' : '' %> class="text-primary-500 focus:ring-primary-500">
                        <span>发布</span>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="flex flex-col space-y-3">
                <button type="submit" class="w-full py-3 px-4 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors flex items-center justify-center space-x-2">
                  <i data-lucide="save" class="w-5 h-5"></i>
                  <span><%= article ? '保存修改' : '创建文章' %></span>
                </button>
                <a href="/admin/articles" class="w-full py-3 px-4 bg-dark-elevated hover:bg-dark-border border border-dark-border text-dark-text font-medium rounded-lg transition-colors text-center">
                  取消
                </a>
              </div>
            </div>
          </div>
        </form>
      </main>
    </div>
  </div>
  
  <script>
    lucide.createIcons();
    
    const tabEdit = document.getElementById('tab-edit');
    const tabPreview = document.getElementById('tab-preview');
    const editorPanel = document.getElementById('editor-panel');
    const previewPanel = document.getElementById('preview-panel');
    const contentInput = document.getElementById('content');
    
    tabEdit.addEventListener('click', () => {
      tabEdit.classList.add('text-primary-500', 'border-b-2', 'border-primary-500');
      tabEdit.classList.remove('text-dark-text-secondary');
      tabPreview.classList.remove('text-primary-500', 'border-b-2', 'border-primary-500');
      tabPreview.classList.add('text-dark-text-secondary');
      editorPanel.classList.remove('hidden');
      previewPanel.classList.add('hidden');
    });
    
    tabPreview.addEventListener('click', () => {
      tabPreview.classList.add('text-primary-500', 'border-b-2', 'border-primary-500');
      tabPreview.classList.remove('text-dark-text-secondary');
      tabEdit.classList.remove('text-primary-500', 'border-b-2', 'border-primary-500');
      tabEdit.classList.add('text-dark-text-secondary');
      editorPanel.classList.add('hidden');
      previewPanel.classList.remove('hidden');
      
      const content = contentInput.value;
      previewPanel.innerHTML = '<div class=\"prose prose-invert max-w-none\">' + content.replace(/\\n/g, '<br>') + '</div>';
    });
    
    const titleInput = document.querySelector('input[name="title"]');
    const slugInput = document.querySelector('input[name="slug"]');
    
    titleInput.addEventListener('blur', () => {
      if (!slugInput.value && titleInput.value) {
        slugInput.value = titleInput.value.toLowerCase()
          .replace(/[^\\w\\s-]/g, '')
          .replace(/[\\s]+/g, '-')
          .substring(0, 50);
      }
    });
  </script>
</body>
</html>
