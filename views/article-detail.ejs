<% 
const title = article.title;
const description = article.excerpt;
%>

<%- include('partials/header') %>

<article class="py-20">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <header class="mb-12" data-animate>
      <div class="flex items-center space-x-3 mb-4">
        <a href="/articles?category=<%= encodeURIComponent(article.category) %>" class="px-3 py-1 text-sm font-medium bg-primary-500/10 text-primary-400 rounded-full hover:bg-primary-500/20 transition-colors">
          <%= article.category %>
        </a>
        <span class="text-light-text-secondary dark:text-dark-text-secondary text-sm"><%= formatDate(article.created_at) %></span>
        <span class="text-light-text-secondary dark:text-dark-text-secondary text-sm flex items-center space-x-1">
          <i data-lucide="eye" class="w-4 h-4"></i>
          <span><%= article.view_count || 0 %> 阅读</span>
        </span>
      </div>
      
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight"><%= article.title %></h1>
      
      <% if (article.cover_image) { %>
        <div class="aspect-video rounded-xl overflow-hidden mb-8">
          <img src="<%= article.cover_image %>" alt="<%= article.title %>" class="w-full h-full object-cover">
        </div>
      <% } %>
      
      <% if (article.excerpt) { %>
        <p class="text-xl text-light-text-secondary dark:text-dark-text-secondary leading-relaxed border-l-4 border-primary-500 pl-6"><%= article.excerpt %></p>
      <% } %>
    </header>
    
    <div class="markdown-body" data-animate>
      <%- renderMarkdown(article.content) %>
    </div>
    
    <% if (article.tags) { %>
      <div class="mt-12 pt-8 border-t border-light-border dark:border-dark-border" data-animate>
        <div class="flex flex-wrap gap-2">
          <% article.tags.split(',').forEach(tag => { %>
            <span class="px-3 py-1 text-sm bg-light-surface dark:bg-dark-surface rounded-full text-light-text-secondary dark:text-dark-text-secondary"><%= tag.trim() %></span>
          <% }) %>
        </div>
      </div>
    <% } %>
    
    <div class="mt-8 flex items-center justify-between" data-animate>
      <a href="/articles" class="inline-flex items-center space-x-2 text-light-text-secondary dark:text-dark-text-secondary hover:text-primary-500 transition-colors">
        <i data-lucide="arrow-left" class="w-4 h-4"></i>
        <span>返回文章列表</span>
      </a>
      <div class="flex items-center space-x-4">
        <span class="text-light-text-secondary dark:text-dark-text-secondary text-sm">分享:</span>
        <button onclick="shareToTwitter()" class="p-2 rounded-lg hover:bg-light-surface dark:hover:bg-dark-surface transition-colors" aria-label="分享到Twitter">
          <i data-lucide="twitter" class="w-5 h-5"></i>
        </button>
        <button onclick="copyLink()" class="p-2 rounded-lg hover:bg-light-surface dark:hover:bg-dark-surface transition-colors" aria-label="复制链接">
          <i data-lucide="link" class="w-5 h-5"></i>
        </button>
      </div>
    </div>
    
    <% if (relatedArticles.length > 0) { %>
      <div class="mt-16 pt-12 border-t border-light-border dark:border-dark-border">
        <h3 class="text-2xl font-bold mb-8" data-animate>相关文章</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <% relatedArticles.forEach((rel, index) => { %>
            <a href="/articles/<%= rel.slug %>" class="card-hover bg-light-surface dark:bg-dark-surface rounded-lg overflow-hidden border border-light-border dark:border-dark-border" data-animate data-delay="<%= index + 1 %>">
              <div class="aspect-video overflow-hidden">
                <img src="<%= rel.cover_image || 'https://picsum.photos/300/170?random=' + rel.id %>" alt="<%= rel.title %>" class="w-full h-full object-cover transition-transform hover:scale-105">
              </div>
              <div class="p-4">
                <h4 class="font-semibold line-clamp-2 hover:text-primary-500 transition-colors"><%= rel.title %></h4>
                <p class="text-light-text-secondary dark:text-dark-text-secondary text-sm mt-2"><%= formatDate(rel.created_at) %></p>
              </div>
            </a>
          <% }) %>
        </div>
      </div>
    <% } %>
  </div>
</article>

<script>
  function shareToTwitter() {
    const url = encodeURIComponent(window.location.href);
    const text = encodeURIComponent('<%= article.title %>');
    window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
  }
  
  function copyLink() {
    navigator.clipboard.writeText(window.location.href).then(() => {
      alert('链接已复制到剪贴板');
    });
  }
</script>

<%- include('partials/footer') %>
