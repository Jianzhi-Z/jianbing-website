<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>仪表盘 - <%= siteTitle %></title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: { 500: '#6366F1', 600: '#4F46E5', 700: '#4338CA' },
            dark: { bg: '#0F172A', surface: '#1E293B', elevated: '#334155', border: '#475569', text: '#F1F5F9', 'text-secondary': '#94A3B8' }
          }
        }
      }
    }
  </script>
  
  <script src="https://unpkg.com/lucide@latest"></script>
  
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar-link { transition: all 0.2s; }
    .sidebar-link:hover, .sidebar-link.active { background: rgba(99, 102, 241, 0.1); color: #6366F1; }
  </style>
</head>
<body class="bg-dark-bg text-dark-text">
  <div class="flex h-screen">
    <aside class="w-64 bg-dark-surface border-r border-dark-border flex-shrink-0 hidden md:flex flex-col">
      <div class="p-6 border-b border-dark-border">
        <a href="/" class="flex items-center space-x-2 text-primary-500">
          <i data-lucide="zap" class="w-6 h-6"></i>
          <span class="font-bold text-lg">煎饼</span>
        </a>
      </div>
      
      <nav class="flex-1 p-4 space-y-1 overflow-y-auto">
        <a href="/admin/dashboard" class="sidebar-link active flex items-center space-x-3 px-4 py-3 rounded-lg">
          <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
          <span>仪表盘</span>
        </a>
        <a href="/admin/articles" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="file-text" class="w-5 h-5"></i>
          <span>文章管理</span>
        </a>
        <a href="/admin/products" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="box" class="w-5 h-5"></i>
          <span>产品管理</span>
        </a>
        <a href="/admin/profile" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="user" class="w-5 h-5"></i>
          <span>个人资料</span>
        </a>
      </nav>
      
      <div class="p-4 border-t border-dark-border">
        <a href="/" target="_blank" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text hover:bg-dark-elevated transition-colors">
          <i data-lucide="external-link" class="w-5 h-5"></i>
          <span>查看网站</span>
        </a>
        <a href="/admin/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10 transition-colors mt-1">
          <i data-lucide="log-out" class="w-5 h-5"></i>
          <span>退出登录</span>
        </a>
      </div>
    </aside>
    
    <div class="flex-1 flex flex-col overflow-hidden">
      <header class="bg-dark-surface border-b border-dark-border h-16 flex items-center justify-between px-6">
        <div class="flex items-center space-x-4">
          <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-dark-elevated">
            <i data-lucide="menu" class="w-5 h-5"></i>
          </button>
          <h1 class="text-xl font-semibold">仪表盘</h1>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/" target="_blank" class="p-2 rounded-lg hover:bg-dark-elevated text-dark-text-secondary" title="查看网站">
            <i data-lucide="globe" class="w-5 h-5"></i>
          </a>
        </div>
      </header>
      
      <main class="flex-1 overflow-y-auto p-6">
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 rounded-lg bg-primary-500/10 flex items-center justify-center">
                <i data-lucide="file-text" class="w-6 h-6 text-primary-500"></i>
              </div>
              <span class="text-2xl font-bold"><%= stats.articles %></span>
            </div>
            <p class="text-dark-text-secondary text-sm">总文章数</p>
          </div>
          
          <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 rounded-lg bg-green-500/10 flex items-center justify-center">
                <i data-lucide="check-circle" class="w-6 h-6 text-green-500"></i>
              </div>
              <span class="text-2xl font-bold"><%= stats.publishedArticles %></span>
            </div>
            <p class="text-dark-text-secondary text-sm">已发布</p>
          </div>
          
          <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 rounded-lg bg-secondary-500/10 flex items-center justify-center">
                <i data-lucide="box" class="w-6 h-6 text-secondary-500"></i>
              </div>
              <span class="text-2xl font-bold"><%= stats.products %></span>
            </div>
            <p class="text-dark-text-secondary text-sm">产品数量</p>
          </div>
          
          <div class="bg-dark-surface rounded-xl p-6 border border-dark-border">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 rounded-lg bg-purple-500/10 flex items-center justify-center">
                <i data-lucide="eye" class="w-6 h-6 text-purple-500"></i>
              </div>
              <span class="text-2xl font-bold"><%= stats.totalViews %></span>
            </div>
            <p class="text-dark-text-secondary text-sm">总阅读量</p>
          </div>
        </div>
        
        <div class="bg-dark-surface rounded-xl p-6 border border-dark-border mb-8">
          <h2 class="text-lg font-semibold mb-4">快捷操作</h2>
          <div class="flex flex-wrap gap-4">
            <a href="/admin/articles/new" class="inline-flex items-center space-x-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
              <i data-lucide="plus" class="w-4 h-4"></i>
              <span>新建文章</span>
            </a>
            <a href="/admin/products/new" class="inline-flex items-center space-x-2 px-4 py-2 bg-dark-elevated hover:bg-dark-border border border-dark-border rounded-lg transition-colors">
              <i data-lucide="plus" class="w-4 h-4"></i>
              <span>新建产品</span>
            </a>
            <a href="/admin/profile" class="inline-flex items-center space-x-2 px-4 py-2 bg-dark-elevated hover:bg-dark-border border border-dark-border rounded-lg transition-colors">
              <i data-lucide="user" class="w-4 h-4"></i>
              <span>编辑资料</span>
            </a>
          </div>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-8">
          <div class="bg-dark-surface rounded-xl border border-dark-border">
            <div class="p-6 border-b border-dark-border flex items-center justify-between">
              <h2 class="text-lg font-semibold">最近文章</h2>
              <a href="/admin/articles" class="text-primary-500 hover:text-primary-400 text-sm">查看全部</a>
            </div>
            <div class="divide-y divide-dark-border">
              <% recentArticles.forEach(article => { %>
                <div class="p-4 flex items-center justify-between hover:bg-dark-bg/50 transition-colors">
                  <div class="flex-1 min-w-0">
                    <h3 class="font-medium truncate"><%= article.title %></h3>
                    <p class="text-dark-text-secondary text-sm mt-1">
                      <%= article.status === 'published' ? '已发布' : '草稿' %> · <%= formatDate(article.updated_at) %>
                    </p>
                  </div>
                  <div class="flex items-center space-x-2 ml-4">
                    <a href="/admin/articles/<%= article.id %>/edit" class="p-2 hover:bg-dark-elevated rounded-lg text-dark-text-secondary hover:text-dark-text" title="编辑">
                      <i data-lucide="edit" class="w-4 h-4"></i>
                    </a>
                    <a href="/articles/<%= article.slug %>" target="_blank" class="p-2 hover:bg-dark-elevated rounded-lg text-dark-text-secondary hover:text-dark-text" title="查看">
                      <i data-lucide="external-link" class="w-4 h-4"></i>
                    </a>
                  </div>
                </div>
              <% }) %>
              <% if (recentArticles.length === 0) { %>
                <div class="p-8 text-center text-dark-text-secondary">
                  <i data-lucide="file-text" class="w-12 h-12 mx-auto mb-4 opacity-50"></i>
                  <p>暂无文章</p>
                </div>
              <% } %>
            </div>
          </div>
          
          <div class="bg-dark-surface rounded-xl border border-dark-border">
            <div class="p-6 border-b border-dark-border flex items-center justify-between">
              <h2 class="text-lg font-semibold">最近产品</h2>
              <a href="/admin/products" class="text-primary-500 hover:text-primary-400 text-sm">查看全部</a>
            </div>
            <div class="divide-y divide-dark-border">
              <% recentProducts.forEach(product => { %>
                <div class="p-4 flex items-center justify-between hover:bg-dark-bg/50 transition-colors">
                  <div class="flex-1 min-w-0">
                    <h3 class="font-medium truncate"><%= product.name %></h3>
                    <p class="text-dark-text-secondary text-sm mt-1">
                      <%= product.featured ? '精选' : '普通' %> · <%= formatDate(product.updated_at) %>
                    </p>
                  </div>
                  <div class="flex items-center space-x-2 ml-4">
                    <a href="/admin/products/<%= product.id %>/edit" class="p-2 hover:bg-dark-elevated rounded-lg text-dark-text-secondary hover:text-dark-text" title="编辑">
                      <i data-lucide="edit" class="w-4 h-4"></i>
                    </a>
                    <a href="/products/<%= product.slug %>" target="_blank" class="p-2 hover:bg-dark-elevated rounded-lg text-dark-text-secondary hover:text-dark-text" title="查看">
                      <i data-lucide="external-link" class="w-4 h-4"></i>
                    </a>
                  </div>
                </div>
              <% }) %>
              <% if (recentProducts.length === 0) { %>
                <div class="p-8 text-center text-dark-text-secondary">
                  <i data-lucide="box" class="w-12 h-12 mx-auto mb-4 opacity-50"></i>
                  <p>暂无产品</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  
  <div id="mobile-menu" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50" id="mobile-menu-overlay"></div>
    <div class="absolute left-0 top-0 bottom-0 w-64 bg-dark-surface border-r border-dark-border">
      <div class="p-4 border-b border-dark-border flex items-center justify-between">
        <span class="font-bold">菜单</span>
        <button id="close-menu" class="p-2 hover:bg-dark-elevated rounded-lg">
          <i data-lucide="x" class="w-5 h-5"></i>
        </button>
      </div>
      <nav class="p-4 space-y-1">
        <a href="/admin/dashboard" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-primary-500/10 text-primary-500">
          <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
          <span>仪表盘</span>
        </a>
        <a href="/admin/articles" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:bg-dark-elevated">
          <i data-lucide="file-text" class="w-5 h-5"></i>
          <span>文章管理</span>
        </a>
        <a href="/admin/products" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:bg-dark-elevated">
          <i data-lucide="box" class="w-5 h-5"></i>
          <span>产品管理</span>
        </a>
        <a href="/admin/profile" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:bg-dark-elevated">
          <i data-lucide="user" class="w-5 h-5"></i>
          <span>个人资料</span>
        </a>
        <a href="/admin/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10">
          <i data-lucide="log-out" class="w-5 h-5"></i>
          <span>退出登录</span>
        </a>
      </nav>
    </div>
  </div>
  
  <script>
    lucide.createIcons();
    
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeMenuBtn = document.getElementById('close-menu');
    const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
    
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.remove('hidden');
    });
    
    closeMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
    
    mobileMenuOverlay.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  </script>
</body>
</html>
