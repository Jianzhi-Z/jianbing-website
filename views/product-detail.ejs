<% 
const title = product.name;
const description = product.short_description || product.description;
%>

<%- include('partials/header') %>

<section class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8" data-animate>
      <a href="/products" class="inline-flex items-center space-x-2 text-light-text-secondary dark:text-dark-text-secondary hover:text-primary-500 transition-colors">
        <i data-lucide="arrow-left" class="w-4 h-4"></i>
        <span>返回产品列表</span>
      </a>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12 mb-16">
      <div data-animate>
        <% if (product.featured) { %>
          <div class="inline-flex items-center space-x-2 px-3 py-1 rounded-full bg-secondary-500/10 text-secondary-500 text-sm font-medium mb-4">
            <i data-lucide="star" class="w-4 h-4"></i>
            <span>精选项目</span>
          </div>
        <% } %>
        <h1 class="text-4xl md:text-5xl font-bold mb-6"><%= product.name %></h1>
        <p class="text-xl text-light-text-secondary dark:text-dark-text-secondary mb-8 leading-relaxed"><%= product.description %></p>
        
        <div class="flex flex-wrap gap-4 mb-8">
          <% if (product.project_url) { %>
            <a href="<%= product.project_url %>" target="_blank" class="inline-flex items-center space-x-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-medium transition-colors">
              <i data-lucide="external-link" class="w-5 h-5"></i>
              <span>访问项目</span>
            </a>
          <% } %>
          <% if (product.github_url) { %>
            <a href="<%= product.github_url %>" target="_blank" class="inline-flex items-center space-x-2 px-6 py-3 bg-light-surface dark:bg-dark-surface hover:bg-light-elevated dark:hover:bg-dark-elevated border border-light-border dark:border-dark-border rounded-lg font-medium transition-colors">
              <i data-lucide="github" class="w-5 h-5"></i>
              <span>查看源码</span>
            </a>
          <% } %>
        </div>
        
        <% if (product.tech_stack) { %>
          <div>
            <h3 class="text-sm font-medium text-light-text-secondary dark:text-dark-text-secondary mb-3">技术栈</h3>
            <div class="flex flex-wrap gap-2">
              <% product.tech_stack.split(',').forEach(tech => { %>
                <span class="px-3 py-1 bg-light-surface dark:bg-dark-surface rounded-full text-sm"><%= tech.trim() %></span>
              <% }) %>
            </div>
          </div>
        <% } %>
      </div>
      
      <div data-animate data-delay="2">
        <% if (product.images) { %>
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-2xl blur-2xl opacity-30"></div>
            <img src="<%= product.images.split(',')[0] %>" alt="<%= product.name %>" class="relative rounded-2xl shadow-2xl w-full">
          </div>
        <% } else { %>
          <div class="aspect-video bg-light-surface dark:bg-dark-surface rounded-2xl flex items-center justify-center">
            <i data-lucide="box" class="w-24 h-24 text-light-text-secondary dark:text-dark-text-secondary"></i>
          </div>
        <% } %>
      </div>
    </div>
    
    <% if (product.images && product.images.split(',').length > 1) { %>
      <div class="mb-16" data-animate>
        <h2 class="text-2xl font-bold mb-6">项目截图</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% product.images.split(',').slice(1).forEach((img, index) => { %>
            <img src="<%= img %>" alt="<%= product.name %> 截图<%= index + 2 %>" class="rounded-xl shadow-lg w-full">
          <% }) %>
        </div>
      </div>
    <% } %>
    
    <div class="bg-light-surface dark:bg-dark-surface rounded-2xl p-8 md:p-12 text-center border border-light-border dark:border-dark-border" data-animate>
      <h2 class="text-2xl md:text-3xl font-bold mb-4">对这个项目感兴趣？</h2>
      <p class="text-light-text-secondary dark:text-dark-text-secondary mb-8 max-w-xl mx-auto">想了解更多细节或讨论类似项目，欢迎联系我</p>
      <a href="/about" class="inline-flex items-center space-x-2 px-8 py-4 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-medium transition-colors">
        <i data-lucide="mail" class="w-5 h-5"></i>
        <span>联系我</span>
      </a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
