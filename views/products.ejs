<% 
const title = '产品';
const description = '将AI技术转化为实用产品';
%>

<%- include('partials/header') %>

<section class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16" data-animate>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">我的产品</h1>
      <p class="text-light-text-secondary dark:text-dark-text-secondary text-lg max-w-2xl mx-auto">将AI技术转化为实用产品，解决真实世界的问题</p>
    </div>
    
    <% products.filter(p => p.featured).forEach(product => { %>
      <div class="mb-16" data-animate>
        <div class="bg-gradient-to-br from-primary-600/20 to-secondary-500/20 rounded-2xl p-8 md:p-12 border border-primary-500/20">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <div class="inline-flex items-center space-x-2 px-3 py-1 rounded-full bg-secondary-500/10 text-secondary-500 text-sm font-medium mb-4">
                <i data-lucide="star" class="w-4 h-4"></i>
                <span>精选项目</span>
              </div>
              <h2 class="text-3xl md:text-4xl font-bold mb-4"><%= product.name %></h2>
              <p class="text-light-text-secondary dark:text-dark-text-secondary text-lg mb-6 leading-relaxed"><%= product.description %></p>
              <div class="flex flex-wrap gap-2 mb-6">
                <% if (product.tech_stack) { %>
                  <% product.tech_stack.split(',').forEach(tech => { %>
                    <span class="px-3 py-1 text-sm bg-light-bg dark:bg-dark-bg rounded-full"><%= tech.trim() %></span>
                  <% }) %>
                <% } %>
              </div>
              <div class="flex flex-wrap gap-4">
                <% if (product.project_url) { %>
                  <a href="<%= product.project_url %>" target="_blank" class="inline-flex items-center space-x-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-medium transition-colors">
                    <i data-lucide="external-link" class="w-5 h-5"></i>
                    <span>访问项目</span>
                  </a>
                <% } %>
                <% if (product.github_url) { %>
                  <a href="<%= product.github_url %>" target="_blank" class="inline-flex items-center space-x-2 px-6 py-3 bg-light-surface dark:bg-dark-surface hover:bg-light-elevated dark:hover:bg-dark-elevated border border-light-border dark:border-dark-border rounded-lg font-medium transition-colors">
                    <i data-lucide="github" class="w-5 h-5"></i>
                    <span>查看源码</span>
                  </a>
                <% } %>
              </div>
            </div>
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-xl blur-2xl opacity-30"></div>
              <img src="<%= product.images ? product.images.split(',')[0] : 'https://picsum.photos/600/400?random=' + product.id %>" alt="<%= product.name %>" class="relative rounded-xl shadow-2xl w-full">
            </div>
          </div>
        </div>
      </div>
    <% }) %>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% products.filter(p => !p.featured).forEach((product, index) => { %>
        <div class="card-hover bg-light-surface dark:bg-dark-surface rounded-xl overflow-hidden border border-light-border dark:border-dark-border" data-animate data-delay="<%= index % 3 + 1 %>">
          <div class="aspect-video overflow-hidden">
            <img src="<%= product.images ? product.images.split(',')[0] : 'https://picsum.photos/400/225?random=' + product.id %>" alt="<%= product.name %>" class="w-full h-full object-cover transition-transform hover:scale-105">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2"><%= product.name %></h3>
            <p class="text-light-text-secondary dark:text-dark-text-secondary text-sm mb-4 line-clamp-2"><%= product.short_description || product.description %></p>
            <div class="flex flex-wrap gap-2 mb-4">
              <% if (product.tech_stack) { %>
                <% product.tech_stack.split(',').slice(0, 3).forEach(tech => { %>
                  <span class="px-2 py-1 text-xs bg-light-elevated dark:bg-dark-elevated rounded text-light-text-secondary dark:text-dark-text-secondary"><%= tech.trim() %></span>
                <% }) %>
              <% } %>
            </div>
            <div class="flex items-center justify-between">
              <a href="/products/<%= product.slug %>" class="inline-flex items-center space-x-2 text-primary-500 hover:text-primary-400 text-sm font-medium transition-colors">
                <span>了解更多</span>
                <i data-lucide="arrow-right" class="w-4 h-4"></i>
              </a>
              <% if (product.github_url) { %>
                <a href="<%= product.github_url %>" target="_blank" class="p-2 hover:bg-light-elevated dark:hover:bg-dark-elevated rounded-lg transition-colors" aria-label="GitHub">
                  <i data-lucide="github" class="w-5 h-5 text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text dark:hover:text-dark-text"></i>
                </a>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    
    <% if (products.length === 0) { %>
      <div class="text-center py-20" data-animate>
        <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-light-surface dark:bg-dark-surface flex items-center justify-center">
          <i data-lucide="box" class="w-10 h-10 text-light-text-secondary dark:text-dark-text-secondary"></i>
        </div>
        <h3 class="text-xl font-semibold mb-2">暂无产品</h3>
        <p class="text-light-text-secondary dark:text-dark-text-secondary">正在开发中，敬请期待...</p>
      </div>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
