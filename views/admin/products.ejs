<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>产品管理 - <%= siteTitle %></title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: { 500: '#6366F1', 600: '#4F46E5' },
            dark: { bg: '#0F172A', surface: '#1E293B', elevated: '#334155', border: '#475569', text: '#F1F5F9', 'text-secondary': '#94A3B8' }
          }
        }
      }
    }
  </script>
  
  <script src="https://unpkg.com/lucide@latest"></script>
  
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar-link:hover, .sidebar-link.active { background: rgba(99, 102, 241, 0.1); color: #6366F1; }
  </style>
</head>
<body class="bg-dark-bg text-dark-text">
  <div class="flex h-screen">
    <aside class="w-64 bg-dark-surface border-r border-dark-border flex-shrink-0 hidden md:flex flex-col">
      <div class="p-6 border-b border-dark-border">
        <a href="/" class="flex items-center space-x-2 text-primary-500">
          <i data-lucide="zap" class="w-6 h-6"></i>
          <span class="font-bold text-lg">煎饼</span>
        </a>
      </div>
      
      <nav class="flex-1 p-4 space-y-1">
        <a href="/admin/dashboard" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
          <span>仪表盘</span>
        </a>
        <a href="/admin/articles" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="file-text" class="w-5 h-5"></i>
          <span>文章管理</span>
        </a>
        <a href="/admin/products" class="sidebar-link active flex items-center space-x-3 px-4 py-3 rounded-lg text-primary-500">
          <i data-lucide="box" class="w-5 h-5"></i>
          <span>产品管理</span>
        </a>
        <a href="/admin/profile" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-dark-text-secondary hover:text-dark-text">
          <i data-lucide="user" class="w-5 h-5"></i>
          <span>个人资料</span>
        </a>
      </nav>
      
      <div class="p-4 border-t border-dark-border">
        <a href="/admin/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10 transition-colors">
          <i data-lucide="log-out" class="w-5 h-5"></i>
          <span>退出登录</span>
        </a>
      </div>
    </aside>
    
    <div class="flex-1 flex flex-col overflow-hidden">
      <header class="bg-dark-surface border-b border-dark-border h-16 flex items-center justify-between px-6">
        <div class="flex items-center space-x-4">
          <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-dark-elevated">
            <i data-lucide="menu" class="w-5 h-5"></i>
          </button>
          <h1 class="text-xl font-semibold">产品管理</h1>
        </div>
        <a href="/admin/products/new" class="inline-flex items-center space-x-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          <i data-lucide="plus" class="w-4 h-4"></i>
          <span>新建产品</span>
        </a>
      </header>
      
      <main class="flex-1 overflow-y-auto p-6">
        <% if (success && success.length > 0) { %>
          <div class="mb-6 p-4 rounded-lg bg-green-500/10 border border-green-500/20 text-green-400 flex items-center space-x-2">
            <i data-lucide="check-circle" class="w-5 h-5"></i>
            <span><%= success %></span>
          </div>
        <% } %>
        <% if (error && error.length > 0) { %>
          <div class="mb-6 p-4 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 flex items-center space-x-2">
            <i data-lucide="alert-circle" class="w-5 h-5"></i>
            <span><%= error %></span>
          </div>
        <% } %>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% products.forEach(product => { %>
            <div class="bg-dark-surface rounded-xl border border-dark-border overflow-hidden group">
              <div class="aspect-video overflow-hidden relative">
                <img src="<%= product.images ? product.images.split(',')[0] : 'https://picsum.photos/400/225?random=' + product.id %>" 
                  alt="<%= product.name %>" 
                  class="w-full h-full object-cover transition-transform group-hover:scale-105">
                <% if (product.featured) { %>
                  <div class="absolute top-2 right-2 px-2 py-1 bg-secondary-500 text-white text-xs font-medium rounded">
                    精选
                  </div>
                <% } %>
              </div>
              <div class="p-4">
                <h3 class="font-semibold mb-1"><%= product.name %></h3>
                <p class="text-dark-text-secondary text-sm mb-3 line-clamp-2"><%= product.short_description || product.description %></p>
                <div class="flex flex-wrap gap-1 mb-3">
                  <% if (product.tech_stack) { %>
                    <% product.tech_stack.split(',').slice(0, 3).forEach(tech => { %>
                      <span class="px-2 py-1 text-xs bg-dark-elevated rounded text-dark-text-secondary"><%= tech.trim() %></span>
                    <% }) %>
                  <% } %>
                </div>
                <div class="flex items-center justify-between pt-3 border-t border-dark-border">
                  <span class="text-dark-text-secondary text-sm">#<%= product.display_order || 0 %></span>
                  <div class="flex items-center space-x-1">
                    <a href="/products/<%= product.slug %>" target="_blank" class="p-2 hover:bg-dark-elevated rounded-lg text-dark-text-secondary hover:text-dark-text" title="查看">
                      <i data-lucide="eye" class="w-4 h-4"></i>
                    </a>
                    <a href="/admin/products/<%= product.id %>/edit" class="p-2 hover:bg-dark-elevated rounded-lg text-dark-text-secondary hover:text-dark-text" title="编辑">
                      <i data-lucide="edit" class="w-4 h-4"></i>
                    </a>
                    <form action="/admin/products/<%= product.id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('确定要删除这个产品吗？')">
                      <button type="submit" class="p-2 hover:bg-red-500/10 rounded-lg text-dark-text-secondary hover:text-red-400" title="删除">
                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
        
        <% if (products.length === 0) { %>
          <div class="p-12 text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-dark-elevated flex items-center justify-center">
              <i data-lucide="box" class="w-8 h-8 text-dark-text-secondary"></i>
            </div>
            <h3 class="text-lg font-medium mb-2">暂无产品</h3>
            <p class="text-dark-text-secondary mb-4">开始添加您的第一个产品吧</p>
            <a href="/admin/products/new" class="inline-flex items-center space-x-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
              <i data-lucide="plus" class="w-4 h-4"></i>
              <span>新建产品</span>
            </a>
          </div>
        <% } %>
      </main>
    </div>
  </div>
  
  <script>lucide.createIcons();</script>
</body>
</html>
